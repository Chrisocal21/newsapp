@import "tailwindcss";

:root {
  /* Archv Design System - Dark, Sophisticated Archive Aesthetic */
  
  /* Primary Archive Colors - Deep, Rich Tones */
  --color-archive-dark: #0f1419;
  --color-archive-darker: #0a0e13;
  --color-archive-surface: #1a2028;
  --color-archive-surface-elevated: #232c36;
  --color-archive-border: #2d3748;
  
  /* Text Colors - High Contrast for Readability */
  --color-text-primary: #f7fafc;
  --color-text-secondary: #cbd5e0;
  --color-text-muted: #718096;
  --color-text-subtle: #4a5568;
  
  /* Accent - Warm Amber for Archive/Collection Feel */
  --color-accent-primary: #f59e0b;
  --color-accent-hover: #d97706;
  --color-accent-light: #fbbf24;
  --color-accent-subtle: #92400e;
  
  /* Category Colors - Muted, Professional Palette */
  --color-world: #64748b;
  --color-politics: #8b5cf6;
  --color-business: #10b981;
  --color-technology: #3b82f6;
  --color-sports: #ef4444;
  --color-entertainment: #ec4899;
  --color-science: #06b6d4;
  --color-health: #84cc16;
  
  /* Semantic Colors */
  --color-success: #10b981;
  --color-warning: #f59e0b;
  --color-error: #ef4444;
  --color-info: #3b82f6;
  
  /* Shadows & Effects */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.6);
  
  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  
  /* Transitions */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

body {
  background-color: var(--color-archive-dark);
  color: var(--color-text-primary);
  font-family: var(--font-geist-sans), system-ui, -apple-system, sans-serif;
  line-height: 1.6;
}

/* Typography Scale */
.text-display {
  font-size: 3.5rem;
  font-weight: 700;
  line-height: 1.1;
  letter-spacing: -0.02em;
}

.text-headline {
  font-size: 2rem;
  font-weight: 600;
  line-height: 1.2;
  letter-spacing: -0.01em;
}

.text-title {
  font-size: 1.5rem;
  font-weight: 600;
  line-height: 1.3;
}

.text-body-lg {
  font-size: 1.125rem;
  line-height: 1.7;
}

.text-body {
  font-size: 1rem;
  line-height: 1.6;
}

.text-body-sm {
  font-size: 0.875rem;
  line-height: 1.5;
}

.text-caption {
  font-size: 0.75rem;
  line-height: 1.4;
  letter-spacing: 0.01em;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: var(--color-archive-surface);
}

::-webkit-scrollbar-thumb {
  background: var(--color-archive-border);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-subtle);
}

/* Focus Styles */
:focus-visible {
  outline: 2px solid var(--color-accent-primary);
  outline-offset: 2px;
}

/* Selection */
::selection {
  background-color: var(--color-accent-primary);
  color: var(--color-archive-dark);
}

/* Hide scrollbar for horizontal scroll */
.no-scrollbar::-webkit-scrollbar {
  display: none;
}

.no-scrollbar {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    transform: translateX(-20px);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes shimmer {
  0% {
    background-position: -1000px 0;
  }
  100% {
    background-position: 1000px 0;
  }
}

.animate-fade-in {
  animation: fadeIn var(--transition-base) ease-out;
}

.animate-slide-in {
  animation: slideIn var(--transition-base) ease-out;
}

/* Utility Classes */
.card {
  background: var(--color-bg-secondary);
  border-radius: 1rem;
  transition: opacity 0.2s ease;
}

.btn-primary {
  background: var(--color-accent-primary);
  color: white;
  padding: 0.875rem 1.5rem;
  border-radius: 0.875rem;
  font-weight: 600;
  font-size: 0.9375rem;
  transition: opacity 0.2s ease;
  border: none;
  cursor: pointer;
}

.btn-primary:hover {
  opacity: 0.9;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.375rem 0.875rem;
  border-radius: 9999px;
  font-size: 0.6875rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

/* Loading Skeleton */
.skeleton {
  background: linear-gradient(
    90deg,
    var(--color-archive-surface) 0%,
    var(--color-archive-surface-elevated) 50%,
    var(--color-archive-surface) 100%
  );
  background-size: 1000px 100%;
  animation: shimmer 2s infinite;
  border-radius: var(--radius-md);
}


:root {
  /* Warm, eye-comfortable backgrounds */
  --background: #faf8f3;       /* Soft warm cream */
  --surface: #ffffff;           /* Pure white for cards */
  --surface-secondary: #f5f1e8; /* Slightly darker warm tone */
  
  /* Text colors with high contrast (7:1 ratio) */
  --foreground: #2d2a26;        /* Dark brown, softer than black */
  --foreground-secondary: #5a544c; /* Muted brown for secondary text */
  --foreground-muted: #8a8077;  /* Very muted for hints/labels */
  
  /* Accent colors - muted but distinguishable */
  --accent-primary: #d4722b;    /* Warm terracotta */
  --accent-primary-hover: #b8621f;
  --accent-secondary: #7b9f8e;  /* Muted sage green */
  --accent-info: #6b8ea8;       /* Soft blue-gray */
  --accent-warning: #d4a342;    /* Warm amber */
  
  /* Category colors - muted palette */
  --category-world: #7b9f8e;
  --category-politics: #9b7d9b;
  --category-business: #8a8ea8;
  --category-technology: #7893a8;
  --category-sports: #a87878;
  --category-entertainment: #c89078;
  --category-science: #78a8a8;
  --category-health: #8ea87b;
}

@theme inline {
  --color-background: var(--background);
  --color-surface: var(--surface);
  --color-surface-secondary: var(--surface-secondary);
  
  --color-foreground: var(--foreground);
  --color-foreground-secondary: var(--foreground-secondary);
  --color-foreground-muted: var(--foreground-muted);
  
  --color-accent-primary: var(--accent-primary);
  --color-accent-primary-hover: var(--accent-primary-hover);
  --color-accent-secondary: var(--accent-secondary);
  --color-accent-info: var(--accent-info);
  --color-accent-warning: var(--accent-warning);
  
  /* Category color utilities */
  --color-category-world: var(--category-world);
  --color-category-politics: var(--category-politics);
  --color-category-business: var(--category-business);
  --color-category-technology: var(--category-technology);
  --color-category-sports: var(--category-sports);
  --color-category-entertainment: var(--category-entertainment);
  --color-category-science: var(--category-science);
  --color-category-health: var(--category-health);
  
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

@media (prefers-color-scheme: dark) {
  :root {
    /* Dark mode with warm tones */
    --background: #1a1816;
    --surface: #252220;
    --surface-secondary: #2d2926;
    
    --foreground: #e8e4dc;
    --foreground-secondary: #c4bfb5;
    --foreground-muted: #8a8077;
    
    --accent-primary: #e68a4f;
    --accent-primary-hover: #f29d63;
    --accent-secondary: #92b5a3;
    --accent-info: #8aa8c4;
    --accent-warning: #e6b85f;
  }
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: Arial, Helvetica, sans-serif;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Generous whitespace helpers */
.comfortable-spacing {
  padding: 1.5rem;
}

@media (min-width: 768px) {
  .comfortable-spacing {
    padding: 2rem;
  }
}

/* Hide scrollbar for swipe navigation */
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}
